// Initialize ProCalculator when DOM is ready
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
        if (!window.ProCalculator) {
            window.ProCalculator = new ProCalculatorCore();
        }
    });
} else {
    if (!window.ProCalculator) {
        window.ProCalculator = new ProCalculatorCore();
    }
}

