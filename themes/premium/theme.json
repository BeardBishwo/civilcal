{
    "name": "Premium Calculator Theme",
    "version": "1.0.0",
    "description": "Professional premium theme for Bishwo Calculator with enhanced UI/UX, animations, and premium features",
    "author": "Bishwo Team",
    "slug": "premium",
    "premium": true,
    "license_required": true,
    "price": 49.99,
    "currency": "USD",
    "features": [
        "Dark/Light Mode Toggle",
        "Custom Calculator Skins",
        "Advanced Animations",
        "Premium Support",
        "Regular Updates",
        "Enhanced Typography",
        "Responsive Design",
        "Custom Color Schemes",
        "Professional Layouts"
    ],
    "compatibility": {
        "min_version": "1.0.0",
        "max_version": "2.0.0"
    },
    "screenshots": [
        "screenshot1.png",
        "screenshot2.png",
        "screenshot3.png"
    ],
    "requirements": {
        "php_version": ">=7.4",
        "mysql_version": ">=5.7",
        "extensions": ["zip", "json"]
    },
    "assets": {
        "css": [
            "css/premium-theme.css",
            "css/premium-calculator.css",
            "css/premium-animations.css"
        ],
        "js": [
            "js/premium-theme.js",
            "js/premium-animations.js",
            "js/dark-mode-toggle.js"
        ],
        "images": [
            "images/premium-logo.png",
            "images/premium-bg.jpg"
        ]
    },
    "settings_schema": {
        "dark_mode_enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable dark mode by default"
        },
        "animation_speed": {
            "type": "select",
            "default": "medium",
            "options": {
                "slow": "Slow",
                "medium": "Medium",
                "fast": "Fast"
            },
            "description": "Animation speed for premium effects"
        },
        "calculator_skin": {
            "type": "select",
            "default": "premium-dark",
            "options": {
                "premium-dark": "Premium Dark",
                "premium-light": "Premium Light",
                "professional-blue": "Professional Blue",
                "modern-gray": "Modern Gray"
            },
            "description": "Default calculator skin style"
        },
        "custom_css": {
            "type": "textarea",
            "default": "",
            "description": "Custom CSS to override theme styles"
        },
        "show_animations": {
            "type": "boolean",
            "default": true,
            "description": "Enable premium animations"
        },
        "typography_style": {
            "type": "select",
            "default": "modern",
            "options": {
                "modern": "Modern",
                "classic": "Classic",
                "minimal": "Minimal",
                "bold": "Bold"
            },
            "description": "Typography style for the theme"
        }
    },
    "hooks": {
        "theme_init": "premium_theme_init",
        "calculator_render": "premium_calculator_render",
        "assets_enqueue": "premium_assets_enqueue"
    }
}