    <script>
        function calculateWireDerating(wireSize, insulationRating, ambientTemp, conductorCount, neutralLoad, racewayType) {
            // Base ampacity from NEC Table 310.16 (Copper conductors)
            const copperAmpacity = {
                '14': { '60': 15, '75': 20, '90': 25 },
                '12': { '60': 20, '75': 25, '90': 30 },
                '10': { '60': 30, '75': 35, '90': 40 },
                '8': { '60': 40, '50': 50, '90': 55 },
                '6': { '60': 55, '75': 65, '90': 75 },
                '4': { '60': 70, '75': 85, '90': 95 },
                '2': { '60': 95, '75': 115, '90': 130 },
                '1': { '60': 110, '75': 130, '90': 150 },
                '1/0': { '60': 125, '75': 150, '90': 170 },
                '2/0': { '60': 145, '75': 175, '90': 195 },
                '3/0': { '60': 165, '75': 200, '90': 225 },
                '4/0': { '60': 195, '75': 230, '90': 260 }
            };
            
            let baseAmpacity = copperAmpacity[wireSize] ? copperAmpacity[wireSize][insulationRating] : 0;
            
            // Temperature correction factor (NEC Table 310.16)
            const tempFactors = {
                '60': [1.0, 0.94, 0.88, 0.82, 0.75, 0.67, 0.58, 0.47, 0.35, 0.22],
                '75': [1.0, 0.96, 0.91, 0.87, 0.82, 0.76, 0.69, 0.61, 0.50, 0.40],
                '90': [1.0, 0.97, 0.94, 0.90, 0.87, 0.83, 0.78, 0.72, 0.65, 0.58]
            };
            
            // Convert ambient temp to adjustment factor
            const tempIndex = Math.floor((ambientTemp - 86) / 5);
            let tempFactor = 1.0;
            if (tempIndex >= 0 && tempIndex < tempFactors[insulationRating].length) {
                tempFactor = tempFactors[insulationRating][tempIndex];
            }
            
            // Determine effective conductor count for adjustment
            let effectiveCount = conductorCount;
            if (neutralLoad === 'yes' && conductorCount >= 4) {
                // For 4+ conductors, neutral may not carry unbalanced load
                effectiveCount = Math.max(3, conductorCount - 1);
            }
            
            // Conductor adjustment factor (NEC 310.15)
            let adjustmentFactor = 1.0;
            let adjustmentClass = '';
            if (effectiveCount > 3) {
                if (effectiveCount <= 6) {
                    adjustmentFactor = 0.8;
                    adjustmentClass = 'warning';
                } else if (effectiveCount <= 9) {
                    adjustmentFactor = 0.7;
                    adjustmentClass = 'warning';
                } else if (effectiveCount <= 20) {
                    adjustmentFactor = 0.5;
                    adjustmentClass = 'danger';
                } else {
                    adjustmentFactor = 0.4;
                    adjustmentClass = 'danger';
                }
            }
            
            // Apply raceway factor (additional derating for raceway fill)
            let racewayFactor = 1.0;
            if (racewayType === 'conduit' && effectiveCount > 6) {
                racewayFactor = 0.9; // Additional 10% for conduit
            }
            
            // Calculate final ampacity
            const tempCorrectedAmpacity = baseAmpacity * tempFactor;
            const adjustedAmpacity = tempCorrectedAmpacity * adjustmentFactor * racewayFactor;
            
            return {
                baseAmpacity: baseAmpacity,
                tempFactor: tempFactor,
                tempCorrectedAmpacity: tempCorrectedAmpacity,
                adjustmentFactor: adjustmentFactor,
                racewayFactor: racewayFactor,
                adjustedAmpacity: adjustedAmpacity,
                effectiveCount: effectiveCount,
                adjustmentClass: adjustmentClass,
                wireSize: wireSize,
                insulationRating: insulationRating,
                ambientTemp: ambientTemp,
                conductorCount: conductorCount,
                neutralLoad: neutralLoad,
                racewayType: racewayType
            };
        }

        document.getElementById('derating-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const wireSize = document.getElementById('wire-size').value;
            const insulationRating = document.getElementById('insulation-rating').value;
            const ambientTemp = parseFloat(document.getElementById('ambient-temp').value);
            const conductorCount = parseInt(document.getElementById('conductor-count').value);
            const neutralLoad = document.getElementById('neutral-load').value;
            const racewayType = document.getElementById('raceway-type').value;

            if (isNaN(ambientTemp) || isNaN(conductorCount)) {
                alert('Please enter valid numbers.');
                return;
            }
            
            const result = calculateWireDerating(wireSize, insulationRating, ambientTemp, conductorCount, neutralLoad, racewayType);
            
            const insulationText = {
                '60': '60°C (TW)',
                '75': '75°C (THW, THWN)',
                '90': '90°C (THHN, XHHW)'
            };
            
            const racewayText = {
                'none': 'Free Air',
                'conduit': 'Conduit',
                'cable': 'Cable Tray',
                'underground': 'Underground'
            };
            
            const resultHtml = `
                <div class="result-item">
                    <strong>Wire Size:</strong><br>${result.wireSize} AWG
                </div>
                <div class="result-item">
                    <strong>Insulation Rating:</strong><br>${insulationText[result.insulationRating]}
                </div>
                <div class="result-item">
                    <strong>Ambient Temperature:</strong><br>${result.ambientTemp}°F
                </div>
                <div class="result-item">
                    <strong>Current Conductors:</strong><br>${result.conductorCount}
                </div>
                <div class="result-item">
                    <strong>Effective Conductors:</strong><br>${result.effectiveCount}
                </div>
                <div class="result-item">
                    <strong>Base Ampacity:</strong><br>${result.baseAmpacity} A
                </div>
                <div class="result-item">
                    <strong>Temperature Factor:</strong><br>${result.tempFactor.toFixed(3)}
                </div>
                <div class="result-item">
                    <strong>Temp Corrected:</strong><br>${result.tempCorrectedAmpacity.toFixed(1)} A
                </div>
                <div class="result-item">
                    <strong>Adjustment Factor:</strong><br>${result.adjustmentFactor.toFixed(3)}
                </div>
                <div class="result-item">
                    <strong>Raceway Factor:</strong><br>${result.racewayFactor.toFixed(3)}
                </div>
                <div class="result-item ${result.adjustmentClass}">
                    <strong>Final Ampacity:</strong><br>${result.adjustedAmpacity.toFixed(1)} A
                </div>
                <div class="result-item">
                    <strong>Raceway Type:</strong><br>${racewayText[racewayType]}
                </div>
            `;
            
            document.getElementById('result-grid').innerHTML = resultHtml;
            document.getElementById('result-area').style.display = 'block';
            
            // Save calculation
            saveCalculation('Wire Derating', `${result.wireSize}AWG ${result.insulationRating}°C → ${result.adjustedAmpacity.toFixed(1)}A`);
        });

        function saveCalculation(type, calculation) {
            let recent = JSON.parse(localStorage.getItem('recentWireDeratingCalculations') || '[]');
            recent.unshift({
                type: type,
                calculation: calculation,
                timestamp: new Date().toLocaleString()
            });
            
            recent = recent.slice(0, 5);
            localStorage.setItem('recentWireDeratingCalculations', JSON.stringify(recent));
        }
    </script>
</body>
</html>
