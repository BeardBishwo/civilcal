# ================================================
# PayPal Configuration
# ================================================
# Add these to your .env file

# PayPal Mode (sandbox or live)
PAYPAL_MODE=sandbox

# PayPal Sandbox Credentials
# Get these from: https://developer.paypal.com/dashboard/
PAYPAL_SANDBOX_CLIENT_ID=YOUR_SANDBOX_CLIENT_ID
PAYPAL_SANDBOX_CLIENT_SECRET=YOUR_SANDBOX_CLIENT_SECRET
PAYPAL_SANDBOX_WEBHOOK_ID=

# PayPal Live Credentials (for production)
PAYPAL_LIVE_CLIENT_ID=YOUR_LIVE_CLIENT_ID
PAYPAL_LIVE_CLIENT_SECRET=YOUR_LIVE_CLIENT_SECRET
PAYPAL_LIVE_WEBHOOK_ID=

# PayPal Settings
PAYPAL_CURRENCY=USD

# Application URL (used for return/cancel URLs)
APP_URL=http://localhost/Bishwo_Calculator
APP_NAME=Bishwo Calculator
