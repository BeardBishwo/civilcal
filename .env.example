APP_NAME="Bishwo Calculator"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://calculator.bishwo.app

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bishwo_calculator
DB_USERNAME=root
DB_PASSWORD=secret

# Database Read Replica (Optional)
DB_READ_HOST=null
DB_READ_USERNAME=null
DB_READ_PASSWORD=null

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Asset CDN (Optional)
CDN_URL=https://cdn.example.com

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Security
APP_KEY=base64:your_32_char_random_key_here
BCRYPT_ROUNDS=12

# Services
STRIPE_KEY=pk_test_...
STRIPE_SECRET=sk_test_...

SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Rate Limiting
RATE_LIMIT=60
RATE_LIMIT_Window=60
