{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}",
                "C:\\laragon\\www\\Bishwo_Calculator": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "runtimeExecutable": "php"
        },
        {
            "name": "Debug Bootstrap",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/app/bootstrap.php",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "runtimeExecutable": "php"
        },
        {
            "name": "Debug Index (Homepage)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/public/index.php",
            "cwd": "${workspaceFolder}/public",
            "port": 9003,
            "env": {
                "REQUEST_URI": "/",
                "REQUEST_METHOD": "GET"
            }
        },
        {
            "name": "Debug Test Script",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/test_fixes.php",
            "cwd": "${workspaceFolder}",
            "port": 9003
        },
        {
            "name": "Debug IDE Runtime Test",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/debug_ide_runtime.php",
            "cwd": "${workspaceFolder}",
            "port": 9003
        },
        {
            "name": "Debug with Browser (Chrome)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://[^)]+\\)",
                "uriFormat": "http://localhost:8080",
                "action": "openExternally"
            }
        },
        {
            "name": "Debug Routes",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/app/routes.php",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "env": {
                "REQUEST_URI": "/",
                "REQUEST_METHOD": "GET"
            }
        },
        {
            "name": "Debug Helper Functions",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/app/Helpers/functions.php",
            "cwd": "${workspaceFolder}",
            "port": 9003
        },
        {
            "name": "Debug Database Connection",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/app/Core/Database.php",
            "cwd": "${workspaceFolder}",
            "port": 9003
        }
    ]
}
